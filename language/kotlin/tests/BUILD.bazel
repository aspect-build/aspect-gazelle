load("@aspect_gazelle//:gazelle.bzl", "gazelle_generation_test")
load("@gazelle//:def.bzl", "gazelle_binary")

# gazelle:ignore
# gazelle:generation_mode update_only

# Internal only for tests
gazelle_binary(
    name = "gazelle_kotlin_test_binary",
    languages = ["//:kotlin"],
    visibility = ["//visibility:private"],
)

# A separate generation test for each tests/* test case
[
    gazelle_generation_test(
        name = "%s_test" % test_workspace.replace("/WORKSPACE", ""),
        dir = test_workspace.replace("/WORKSPACE", ""),
        gazelle_binary = ":gazelle_kotlin_test_binary",
    )
    for test_workspace in glob(["*/WORKSPACE"])
]
