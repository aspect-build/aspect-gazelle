load("@aspect_bazel_lib//lib:copy_to_bin.bzl", "copy_to_bin")

filegroup(
    name = "x",
    srcs = ["x.sh"],
)

copy_to_bin(
    name = "ctb",
    srcs = [
        "a.txt",
        ":x",
    ],
)

sh_library(
    name = "shells",
    srcs = [
        ":ctb",
    ],
)

sh_binary(
    name = "shells-bin",
    srcs = [":shells"],
    deps = [":shells"],
)

filegroup(
    name = "all-files",
    srcs = [
        "a.txt",
    ],
)

